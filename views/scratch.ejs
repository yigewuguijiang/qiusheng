                canvas.onmouseup = canvas.onmouseleave = () => {
                    isDrawing = false;
                    lastX = lastY = null;
                };
                
                canvas.onmousemove = e => {
                    if (!isDrawing) return;
                    const rect = canvas.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
