                        if (prizeText.includes('å’Œè·¯äººæ­Œæ‰‹battle')) {
                            const singers = ['å‘¨æ°ä¼¦', 'æ—ä¿Šæ°', 'ç‹åŠ›å®', 'é™¶å–†', 'é‚“ç´«æ£‹', 'å­™ç‡•å§¿', 'å¼ æƒ å¦¹', 'æ¢é™èŒ¹'];
                            const randomSinger = singers[Math.floor(Math.random() * singers.length)];
