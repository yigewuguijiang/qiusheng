    <script>
        const username = "<%= username %>";
        
        // æŒ‘æˆ˜ä»»åŠ¡å’Œé¢œè‰² - ç”Ÿå­˜ç›´æ’­ç‰ˆ
        const challenges = [
            '2å…ƒä¹°åƒçš„', 'Quiz', 'Scratch', 'Slot', 'é›†ä½“10ä¸ªæ·±è¹²',
            'å’Œè·¯äººç¾å¥³è¦å¾®ä¿¡', 'å’Œè·¯äººç¾å¥³åˆç…§', 'ç»™è·¯äººç”¨å‰ä»–å”±æ­Œå¹¶æ‰“åˆ†',
            'é›†ä½“çƒ­èˆ1åˆ†é’Ÿ', 'é›†ä½“10ä¸ªä¿¯å§æ’‘', 'çŸ³å¤´å‰ªåˆ€å¸ƒå…¬ä¸»æŠ±ä¸‹è¹²5ä¸ª',
            'è¦è·¯äººå¸…å“¥å¾®ä¿¡', 'æ‰¾è·¯äººè¦åƒçš„'
        ];
        const colors = [
            "#f44336", "#4caf50", "#2196f3", "#ff9800", "#9c27b0", "#607d8b",
            "#e91e63", "#795548", "#009688", "#ff5722", "#673ab7", "#3f51b5", "#ffc107"
        ];
        const canvas = document.getElementById("wheel");
        const ctx = canvas.getContext("2d");
        
        // åŠ¨æ€è°ƒæ•´Canvaså°ºå¯¸ - æ”¯æŒé«˜DPIå±å¹•
        function resizeCanvas() {
            const isMobile = window.innerWidth <= 768;
            const size = isMobile ? 250 : 300;
            const dpr = window.devicePixelRatio || 1;
            
            // è®¾ç½®å®é™…Canvasåˆ†è¾¨ç‡ï¼ˆè€ƒè™‘è®¾å¤‡åƒç´ æ¯”ï¼‰
            canvas.width = size * dpr;
            canvas.height = size * dpr;
            
            // è®¾ç½®æ˜¾ç¤ºå°ºå¯¸
            canvas.style.width = size + 'px';
            canvas.style.height = size + 'px';
            
            // ç¼©æ”¾Canvasç»˜åˆ¶ä¸Šä¸‹æ–‡
            ctx.scale(dpr, dpr);
        }
        
        window.addEventListener('resize', () => {
            resizeCanvas();
            drawWheel();
        });
        
        resizeCanvas();
        
        function drawWheel() {
            const arc = 2 * Math.PI / challenges.length;
            const isMobile = window.innerWidth <= 768;
            const size = isMobile ? 250 : 300;
            const center = size / 2;
            const radius = center - 10;
            
            // æ¸…é™¤ç”»å¸ƒ
            ctx.clearRect(0, 0, size, size);
            
            for (let i = 0; i < challenges.length; i++) {
                const start = i * arc;
                ctx.beginPath();
                ctx.moveTo(center, center);
                ctx.fillStyle = colors[i];
                ctx.arc(center, center, radius, start, start + arc);
                ctx.fill();
                ctx.save();
                ctx.translate(center, center);
                ctx.rotate(start + arc / 2);
                ctx.fillStyle = "#fff";
                // æ ¹æ®å±å¹•å¤§å°è°ƒæ•´å­—ä½“ï¼Œç¡®ä¿é«˜DPIå±å¹•ä¸‹æ¸…æ™°
                const fontSize = isMobile ? 10 : 12;
                ctx.font = `${fontSize}px Arial`;
                ctx.textAlign = "right";
                ctx.fillText(challenges[i], radius - 10, 5);
                ctx.restore();
            }
        }
        
        drawWheel();
        
        function generateNonce(length = 16) {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
            return Array.from({ length }, () => chars[Math.floor(Math.random() * chars.length)]).join('');
        }
        
        async function spin() {
            const button = document.getElementById('spinButton');
            const resultDiv = document.getElementById('result');
            
            // é˜²æ­¢é‡å¤ç‚¹å‡»
            button.disabled = true;
            resultDiv.textContent = "è½¬åŠ¨ä¸­ï¼Œè¯·ç¨å€™...";
            
            const timestamp = Math.floor(Date.now() / 1000);
            const nonce = generateNonce();
            
            try {
                const response = await fetch('/api/spin', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username, timestamp, nonce })
                });
                
                const data = await response.json();
                
                if (!data.success) {
                    resultDiv.textContent = "âŒ " + data.message;
                    button.disabled = false;
                    return;
                }
                
                // å®Œå…¨æŒ‰ç…§åŸç‰ˆçš„åŠ¨ç”»é€»è¾‘
                const finalAngle = 360 * 5 + (270 - data.angle);
                const duration = 4000;
                const start = performance.now();
                
                function animate(now) {
                    const t = Math.min((now - start) / duration, 1);
                    const eased = 1 - Math.pow(1 - t, 3); // åŸç‰ˆç¼“åŠ¨å‡½æ•°
                    const angle = finalAngle * eased;
                    
                    const isMobile = window.innerWidth <= 768;
                    const size = isMobile ? 250 : 300;
                    const center = size / 2;
                    
                    ctx.clearRect(0, 0, size, size);
                    ctx.save();
                    ctx.translate(center, center);
                    ctx.rotate((angle * Math.PI) / 180);
                    ctx.translate(-center, -center);
                    drawWheel();
                    ctx.restore();
                    
                    if (t < 1) {
                        requestAnimationFrame(animate);
                    } else {
                        resultDiv.innerHTML = `
                            <div style="color: #28a745; font-weight: bold; text-align: center; font-size: 1.2rem; padding: 15px; background: #f8f9fa; border-radius: 10px; margin-top: 20px;">
                                ${data.prize}
                            </div>
                        `;
                        button.disabled = false;
                    }
                }
                
                requestAnimationFrame(animate);
                
            } catch (error) {
                resultDiv.textContent = "âŒ ç½‘ç»œé”™è¯¯ï¼Œè¯·é‡è¯•";
                button.disabled = false;
                console.error('Error:', error);
            }
        }
    </script>
