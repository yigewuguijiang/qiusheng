        }
        
        function animateReels(finalSymbols, reward) {
            const button = document.getElementById('spinBtn');
            const resultDiv = document.getElementById('result');
            button.disabled = true;
            resultDiv.textContent = '';
            
            // Add spinning animation
            reels.forEach(reel => {
