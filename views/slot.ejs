    <script>
        const username = "<%= username %>";
        const reels = ['r1', 'r2', 'r3'];
        const symbols = ['ğŸ', 'ğŸ‹', 'ğŸ’', 'ğŸ‡', 'ğŸ’', '7ï¸âƒ£', 'ğŸ””', 'â­'];
